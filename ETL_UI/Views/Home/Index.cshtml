@{
    ViewData["Title"] = "Home Page";
}

<form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="UploadFile">
    @*<input type="file" name="file" class="custom-file-input" />*@
    <div class="form-row align-items-center">
        <div class="form-group col-md-3">
            <label for="exampleFormControlSelect1">File Type</label>
            <select class="form-control" id="exampleFormControlSelect1">
                <option>1</option>
                <option>2</option>
            </select>
        </div>
        <div class="custom-file col-md-3 mt-3">
            <input type="file" name="file" class="custom-file-input" id="files">
            <label class="custom-file-label" for="customFile">Choose file</label>
        </div>
        <button type="submit" class="btn btn-primary ml-2 mt-3"><i class="fas fa-upload"></i> Upload</button>
    </div>
</form>
<div class="row">
    <img src="~/images/home_screen.png" />
    <table class="table table-bordered table-hover table-sm">
        <thead class="bg-primary">
            <tr>
                <th class="text-center">Workflows</th>
                <th class="text-center">Sessions</th>
                <th class="text-center">Transformation</th>
                <th class="text-center">Success</th>
                <th class="text-center">Failure</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="text-center">1</td>
                <td class="text-center">2</td>
                <td class="text-center">7</td>
                <td class="text-center">100%</td>
                <td class="text-center">0%</td>
            </tr>
        </tbody>
    </table>
</div>

@*
    If upload succeeded we will show nice message to user.
*@
@if (ViewBag.Message != null)
{
    <div class="alert alert-success" style="margin-top:20px">
        @ViewBag.Message
    </div>
}